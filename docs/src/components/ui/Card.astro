---
/**
 * Card Component
 * Single Responsibility: Render consistent card container
 */
interface Props {
  title?: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className = '' } = Astro.props;
---

<div class={`bg-white dark:bg-slate-800 rounded-xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 border border-slate-200 dark:border-slate-700 ${className}`}>
  {title && (
    <div class="flex items-center gap-3 mb-4">
      {icon && <span class="text-3xl">{icon}</span>}
      <h3 class="text-xl font-bold text-slate-900 dark:text-white">{title}</h3>
    </div>
  )}
  <div class="text-slate-600 dark:text-slate-300">
    <slot />
  </div>
</div>
