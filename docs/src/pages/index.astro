---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SqlAuditTable } from '../components/SqlAuditTable';
import { LanguageToggle } from '../components/LanguageToggle';
import { GithubIcon } from '../components/icons';
import HeroContent from '../components/HeroContent.astro';
import AuditPanel from '../components/AuditPanel.astro';
import BackgroundFX from '../components/BackgroundFX.astro';
import FloatingPointer from '../components/FloatingPointer.astro';
---

<BaseLayout title="Panoptes SDK" description="Audit trails for every SQL query">
  <div class="relative h-screen w-full overflow-hidden bg-slate-950 text-white">
    <div class="absolute left-0 right-0 top-0 z-30 flex items-center justify-end gap-3 px-4 py-4 sm:px-6">
      <a
        href="https://github.com/malydev/panoptes-sdk"
        target="_blank"
        rel="noreferrer"
        class="inline-flex items-center gap-2 rounded-full border border-white/30 bg-white/10 px-4 py-2 text-xs font-semibold text-white backdrop-blur transition hover:border-white/50 hover:bg-white/20 sm:text-sm"
      >
        <GithubIcon />
        GitHub
      </a>
      <LanguageToggle client:load />
    </div>
    <BackgroundFX />
    <FloatingPointer client:load />

    <div class="absolute inset-0 overflow-hidden p-4 md:p-6 lg:p-10 opacity-80 pointer-events-none">
      <div class="h-full">
        <SqlAuditTable client:only="react" />
      </div>
    </div>

    <div class="relative z-10 flex h-full w-full items-center justify-center px-4 py-8 sm:py-10 md:py-12">
      <div class="grid w-full max-w-6xl items-center justify-items-center gap-10 md:gap-12 lg:grid-cols-2 lg:justify-items-start">
        <HeroContent />
        <AuditPanel />
      </div>
    </div>

    <footer class="pointer-events-auto absolute bottom-0 left-0 right-0 z-20 flex items-center justify-center border-t border-white/10 bg-transparent px-4 py-5 text-center text-sm text-white">
      <div class="flex flex-col items-center gap-1">
        <span class="text-2xl font-black tracking-[0.18em] text-white">malydev</span>
      </div>
    </footer>
  </div>

</BaseLayout>
